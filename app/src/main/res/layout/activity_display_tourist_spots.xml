<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_details_bg"
    tools:context=".displayTouristSpots">

    <ImageButton
        android:id="@+id/ibBackTouristSpots"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#00FFFFFF"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24"/>

    <TextView
        android:id="@+id/tvTouristSpots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="60dp"
        android:text="TOURIST SPOTS"
        android:textColor="#ff8b3d"
        android:fontFamily="@font/josefinsemibold"
        android:textSize="35dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTouristSpots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/ibBackTouristSpots"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"/>


</RelativeLayout>