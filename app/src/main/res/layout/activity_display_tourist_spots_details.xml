<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".displayTouristSpotsDetails"
    android:background="@drawable/gradient_details_bg">

    <ImageButton
        android:id="@+id/ibBackDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#00FFFFFF"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <ScrollView
        android:id="@+id/svDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ibBackDetails">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:letterSpacing="0.05"
                android:text="TITLE"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/ivImage_1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tvTitle"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"/>


            <TextView
                android:id="@+id/tvDesc_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivImage_1"
                android:layout_marginTop="30dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:justificationMode="inter_word"
                android:text="DESCRIPTION 1"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif"
                android:textSize="20dp"
                android:lineSpacingExtra="10sp" />

            <ImageView
                android:id="@+id/ivImage_2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/tvDesc_1"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:id="@+id/tvDesc_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivImage_2"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif"
                android:justificationMode="inter_word"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:text="DESCRIPTION 2"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:lineSpacingExtra="10sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnVisitWebsite"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDesc_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/btn_rounded"
                android:backgroundTint="#B5C6FFF9"
                android:fontFamily="@font/arlrdbd"
                android:text="Visit Website"
                android:textStyle="bold" />

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabTouristSpotsDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:elevation="5dp"
        android:src="@drawable/ic_baseline_arrow_upward_24"
        app:backgroundTint="#ffffff" />

</RelativeLayout>